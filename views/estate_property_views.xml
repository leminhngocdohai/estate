<odoo>
    <data>
        <record id="estate_property_view_form" model="ir.ui.view">
            <field name="name">estate form</field>
            <field name="model">estate.property</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form string="Estate Property">
                    <header>
                        <button name="action_mark_as_sold" type="object" string="Mark as Sold" class="btn-primary"
                                modifiers="{'readonly': [('is_button_disabled', '=', True)]}"
                        />
                        <field name="state" widget="statusbar" statusbar_visible="new,offer_received,offer_accepted,sold"/>
                    </header>
                    <sheet>
                        <div class="oe_title pb-4">
                            <h1>
                                <field name="name"/>
                            </h1>
                            <field name="tag_ids" widget="many2many_tags" options="{'color_field': 'color'}"/>
                        </div>
                        <group>
                            <group>
                                <field name="postcode"/>
                                <field name="garage"/>
                                <field name="expected_price"/>
                            </group>
                        </group>

                        <notebook>
                            <page string="Description">
                                <group>
                                    <group>
                                        <field name="description"/>
                                        <field name="bedrooms"/>
                                        <field name="living_area"/>
                                        <field name="facades"/>
                                        <field name="garage" widget="toggle"/>
                                        <field name="garden"/>
                                        <field name="garden_area"/>
                                        <field name="garden_orientation"/>
                                    </group>
                                </group>
                            </page>
                            <page string="Offer">
                                <field name="offer_ids"/>
                            </page>
                            <page string="Other Info">
                                <group>
                                    <group>
                                        <field name="user_id"/>
                                        <field name="buyer_id"/>
                                    </group>
                                </group>
                            </page>
                        </notebook>

                    </sheet>
                </form>
            </field>
        </record>


        <!-- explicit list view definition -->
        <record model="ir.ui.view" id="estate_property_view_tree">
            <field name="name">estate tree</field>
            <field name="model">estate.property</field>
            <field name="arch" type="xml">
                <list>
                    <field name="name"/>
                    <field name="description"/>
                    <field name="postcode"/>
                    <field name="facades"/>
                    <field name="garage" widget="toggle"/>
                    <field name="garden"/>
                    <field name="state"/>
                    <field name="tag_ids" widget="many2many_tags" options="{'color_field': 'color'}"/>
                </list>
            </field>
        </record>

        <!-- actions opening views on models -->
        <record model="ir.actions.act_window" id="estate_property_action_window">
            <field name="name">Estate Base</field>
            <field name="res_model">estate.property</field>
            <field name="view_mode">list,form</field>
        </record>
    </data>
</odoo>
