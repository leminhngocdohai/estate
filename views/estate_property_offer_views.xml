<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="estate_property_offer_view_list" model="ir.ui.view">
        <field name="name">Estate Offer List</field>
        <field name="model">estate.property.offer</field>
        <field name="arch" type="xml">
            <list string="Property Offers">
                <field name="price"/>
                <field name="partner_id"/>
            </list>
        </field>
    </record>

    <record id="estate_property_offer_view_form" model="ir.ui.view">
        <field name="name">Estate Offer Form</field>
        <field name="model">estate.property.offer</field>
        <field name="arch" type="xml">
            <form string="Property Offer">
                <group>
                    <field name="price"/>
                    <field name="partner_id"/>
                    <field name="property_id"/>
                </group>
            </form>
        </field>
    </record>

    <record model="ir.actions.act_window" id="estate_property_offer_action_window">
        <field name="name">Estate Offers</field>
        <field name="res_model">estate.property.offer</field>
        <field name="view_mode">list,form</field>
    </record>
</odoo>